<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="atchley.chris.zombiepositions.SixPlayerActivity"
                android:background="@android:color/black">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="100">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:weightSum="2"
            android:id="@+id/linearLayout"
            android:layout_weight="90">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:weightSum="3"
                android:transitionGroup="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView5"
                    android:layout_weight="1"
                    android:src="@drawable/chris"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView6"
                    android:layout_weight="1"
                    android:src="@drawable/mike"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView7"
                    android:layout_weight="1"
                    android:src="@drawable/zac"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:weightSum="3">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView10"
                    android:layout_weight="1"
                    android:src="@drawable/dirt"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView9"
                    android:layout_weight="1"
                    android:src="@drawable/patrice"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView8"
                    android:src="@drawable/brian"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/positionRandomButton"
            android:id="@+id/positionRandomButton"
            android:layout_weight="10"
            android:background="@android:color/holo_red_light"
            android:textSize="24sp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="50dp"
        android:text="Position"
        android:id="@+id/textView1"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:textSize="25sp"
        android:textIsSelectable="false"
        android:textColor="#ffffee1a"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="210dp"
        android:text="Position"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:textSize="25sp"
        android:textColor="#ffff0c1e"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="50dp"
        android:text="Position"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:textSize="25sp"
        android:textColor="#ff30ff24"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="230dp"
        android:text="Position"
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:textSize="25sp"
        android:textColor="#fffdfffb"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="425dp"
        android:layout_marginLeft="30dp"
        android:text="Position"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:textSize="25sp"
        android:textColor="#ff2722ff"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="230dp"
        android:text="Position"
        android:id="@+id/textView6"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:textSize="25sp"
        android:textColor="#ffde0d1c"/>

</RelativeLayout>
